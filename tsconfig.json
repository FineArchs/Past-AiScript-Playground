{
	"$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUncheckedIndexedAccess": true,
		"target": "es2022",
    "importHelpers": true,
    "isolatedModules": true,
    "noEmit": true,
    "rootDir": "./src",
		"baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@common/*": ["./common/*"]
    }
  },
	"compileOnSave": false,
	"include": [
		"./src/**/*"
	]
}
